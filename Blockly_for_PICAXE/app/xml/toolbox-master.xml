  <!-- LOOPS -->

    <category id="cat04" name="Loops">
    <!-- LOOPS : FOREVER DO [STAT] -->
    <block type="picaxe_loops_forever" description="Forever Do"></block>
    <!-- LOOPS : REPEAT [STAT] UNTIL [PIN] IS [ON/OFF] -->
    <block type="picaxe_loops_repeat_pin" description="Repeat Until Pin"></block>
    <!-- LOOPS : REPEAT [STAT] UNTIL [CV] [OP] [CV] -->
    <block type="picaxe_loops_repeat" description="Repeat">
      <value name="VAR1">
        <block type="picaxe_vals_var">
          <field name="VAR">varA</field>
        </block>
      </value>
        <value name="VAR2">
        <block type="picaxe_vals_val">
          <field name="VALUE">10</field>
        </block>
      </value>
    </block>
    <!-- LOOPS : WHILE [PIN] IS [ON/OFF] DO [STAT] -->
    <block type="picaxe_loops_while_pin" description="While Pin"></block>
    <!-- LOOPS : WHILE [CV] [OP] [CV] DO [STAT] -->
    <block type="picaxe_loops_while" description="While">
      <value name="VAR1">
        <block type="picaxe_vals_var">
          <field name="VAR">varA</field>
        </block>
      </value>
        <value name="VAR2">
        <block type="picaxe_vals_val">
          <field name="VALUE">10</field>
        </block>
      </value>
    </block>
    <!-- LOOPS : COUNT WITH [VAR] FROM [CV] TO [CV] BY [CV] -->
    <block type="picaxe_loops_count" description="Count">
      <field name="VAR">varA</field>
      <value name="FROM">
        <block type="picaxe_vals_val">
          <field name="VALUE">0</field>
        </block>
      </value>
      <value name="TO">
        <block type="picaxe_vals_val">
          <field name="VALUE">4</field>
        </block>
      </value>
      <value name="STEP">
        <block type="picaxe_vals_val">
          <field name="VALUE">1</field>
        </block>
      </value>
    </block>
    <!-- LOOPS : COUNT DOWN WITH [VAR] FROM [CV] TO [CV] BY [CV] -->
    <block type="picaxe_loops_countdown">
      <field name="VAR">varA</field>
      <value name="FROM">
        <block type="picaxe_vals_val">
          <field name="VALUE">4</field>
        </block>
      </value>
      <value name="TO">
        <block type="picaxe_vals_val">
          <field name="VALUE">1</field>
        </block>
      </value>
      <value name="STEP">
        <block type="picaxe_vals_val">
          <field name="VALUE">1</field>
        </block>
      </value>
    </block>
  </category>

