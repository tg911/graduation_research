  <!-- OUTPUT -->

  <category id="cat01" name="Output">
    <!-- OUTPUT : TURN OUTPUT [PIN] [ON/OFF] -->
    <block type="picaxe_output_outputon" description="Output On"></block>
    <!-- OUTPUT : TURN OUTPUT [PIN] [ON/OFF] FOR [CV] MS -->
    <block type="picaxe_output_outputonfor" description="Output On For">
      <value name="TIME">
        <block type="picaxe_vals_val">
          <field name="VALUE">1000</field>
        </block>
      </value>
    </block>
    <!-- OUTPUT : HIGH [PIN] -->
    <!--
    <block type="picaxe_output_high" description="High"></block>
    -->
    <!-- OUTPUT : LOW [PIN] -->
    <!--
    <block type="picaxe_output_low" description="Low"></block>
     -->
    <!-- OUTPUT : TOGGLE [PIN] -->
    <!--
    <block type="picaxe_output_toggle" description="Toggle"></block>
    -->
    <!-- OUTPUT : PULSE OUTPUT [PIN] FOR [CV] MS -->
    <block type="picaxe_output_pulseoutput" description="Pulse Output">
      <value name="TIME">
        <block type="picaxe_vals_val">
          <field name="VALUE">500</field>
        </block>
      </value>
    </block>
    <!-- OUTPUT : PLAY NOTE [CV] FOR [CV] ON [PIN] -->
    <block type="picaxe_output_sound" description="Sound">
      <value name="NOTE">
        <block type="picaxe_vals_val">
          <field name="VALUE">64</field>
        </block>
      </value>
      <value name="TIME">
        <block type="picaxe_vals_val">
          <field name="VALUE">500</field>
        </block>
      </value>
    </block>
    <!-- OUTPUT : PLAY [SONG] ON [PIN] -->
    <block type="picaxe_output_play" description="Play"></block>
    <!-- OUTPUT : SPE035 [command] [CV] ON [PIN] -->
    <block type="picaxe_output_spe035">
      <field name="COMMAND">play</field>
      <value name="VALUE">
        <block type="picaxe_vals_val">
          <field name="VALUE">1</field>
        </block>
      </value>
    </block>
    <!-- OUTPUT : TUNE [TEXT] -->
    <block type="picaxe_output_tune" description="Tune"></block>
    <!-- OUTPUT : SEND INFRARED [CV] ON [PIN] -->
    <block type="picaxe_output_irout" description="Infrared Out">
      <value name="COMMAND">
        <block type="picaxe_vals_val">
          <field name="VALUE">1</field>
        </block>
      </value>
    </block>
    <!-- OUTPUT : SET SERVO [PIN] TO [CV] -->
    <block type="picaxe_output_servo" description="Set Servo">
      <value name="POSITION">
        <block type="picaxe_vals_val">
          <field name="VALUE">150</field>
        </block>
      </value>
    </block>
    <!-- OUTPUT : SET SERVOPOS [PIN] TO [CV] -->
    <block type="picaxe_output_servopos" description="Set ServoPos">
      <value name="POSITION">
        <block type="picaxe_vals_val">
          <field name="VALUE">150</field>
        </block>
      </value>
    </block>
    <!-- OUTPUT : SET PWMOUT DUTY [CV] PERIOD [CV] ON [PIN] -->
    <block type="picaxe_output_pwmout" description="Pwmout">
      <value name="PERIOD">
        <block type="picaxe_vals_val">
          <field name="VALUE">100</field>
        </block>
      </value>
      <value name="DUTY">
        <block type="picaxe_vals_val">
          <field name="VALUE">200</field>
        </block>
      </value>
    </block>
    <!-- OUTPUT : SET PINS [PORT] TO [CV] -->
    <block type="picaxe_output_pins" description="Set Pins">
      <value name="VALUE">
        <block type="picaxe_vals_val">
          <field name="VALUE">255</field>
        </block>
      </value>
    </block>
    <!-- OUTPUT : SET DIRS [PORT] TO [CV] -->
    <block type="picaxe_output_dirs" description="Set Dirs">
      <value name="VALUE">
        <block type="picaxe_vals_val">
          <field name="VALUE">255</field>
        </block>
      </value>
    </block>
